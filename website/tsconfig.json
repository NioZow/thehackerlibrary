{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/src/*": ["./src/*"],
      "@/style/*": ["./src/styles/*"],
      "@/page/*": ["./src/pages/*"],
      "@/feature/*": ["./src/components/features/*"],
      "@/layout/*": ["./src/components/layouts/*"],
      "@/module/*": ["./src/components/modules/*"],
      "@/element/*": ["./src/components/elements/*"],
      "@/ui/*": ["./src/components/ui/*"],
      "@/icon/*": ["./src/components/icons/*"],
      "@/context/*": ["./src/contexts/*"],
      "@/wrapper/*": ["./src/wrappers/*"],
      "@/hook/*": ["./src/hooks/*"],
      "@/class/*": ["./src/classes/*"],
      "@/instance/*": ["./src/instances/*"],
      "@/util/*": ["./src/utils/*"],
      "@/constant/*": ["./src/constants/*"],
      "@/type/*": ["./src/types/*"],
      "@/image/*": ["./src/assets/images/*"],
      "@/font/*": ["./src/assets/fonts/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
